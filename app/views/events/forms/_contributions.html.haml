%ul.no-bullet
  %li
    .cp-volunteer
      %p List volunteers here
= form_tag @event do |f|
  %fieldset
    %legend Add volunteer
    .row
      .large-12.columns
        = label_tag 'Volunteer name'
        = text_field_tag :volunteer_name
        = label_tag 'Volunteer email'
        = email_field_tag :volunteer_email
  .row
    .large-12.columns
      = submit_tag 'Add', class: 'button right small secondary'

- if @event.supplies.blank?
  %p.empty No supplies added yet
- else
  %h5
  %ul.no-bullet
    - @event.supplies.each do |supply|
      %li
        .cp-supply
          %span= supply.name
          %span $#{supply.price}
          %span x #{supply.quantity} unit(s)
= form_for [@event, @event.supplies.new] do |f|
  %fieldset
    %legend Add supplies
    .row
      .large-12.columns
        = f.label :name
        = f.text_field :name
        = f.label :quantity
        = f.number_field :quantity
        = f.label :price
        = f.number_field :price
  .row
    .large-12.columns
      = f.submit 'Add', class: 'button right small secondary'
