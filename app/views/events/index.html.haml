- provide(:title, 'Events')

.row.bglite
  .large-12.columns
    .large-12.columns
      %h1 Events listing
      = link_to 'New Event', new_event_path, class: 'button'

    %table
      %tr
        %th Name
        %th Deadline
        %th Description
        %th Website
        %th Properties
        %th
        %th
        %th

      - @events.each do |event|
        %tr
          %td= event.name
          %td= event.deadline
          %td= event.description
          %td= event.website
          %td= event.properties
          %td= link_to 'Show', event
          %td= link_to 'Edit', edit_event_path(event)
          %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }
